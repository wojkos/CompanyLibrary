!!!
%html
  %head
    %title CompanyLibrary
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %body
      .wrapper
        / Sidebar Holder
        %nav#sidebar
          .sidebar-header
            %h3 Company Library
            -if current_user
              Zalogowano jako:
              %br
              %strong
                = current_user.name
              %br
              = link_to "Wyloguj", signout_path, id: "sign_out", class: 'btn btn-info pull-right'
            -# -else
            -#   = link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" 
          %ul.list-unstyled.components
            %p Dummy Heading
            %li.active
              %a{"aria-expanded" => "false", "data-toggle" => "collapse", :href => "#homeSubmenu"} Home
              %ul#homeSubmenu.collapse.list-unstyled
                %li
                  %a{:href => "#"} Home 1
                %li
                  %a{:href => "#"} Home 2
                %li
                  %a{:href => "#"} Home 3
            %li
              %a{:href => "#"} About
              %a{"aria-expanded" => "false", "data-toggle" => "collapse", :href => "#pageSubmenu"} Pages
              %ul#pageSubmenu.collapse.list-unstyled
                %li
                  %a{:href => "#"} Page 1
                %li
                  %a{:href => "#"} Page 2
                %li
                  %a{:href => "#"} Page 3
            %li
              %a{:href => "#"} Portfolio
            %li
              %a{:href => "#"} Contact
          %ul.list-unstyled.CTAs
            %li
              =link_to "Dodaj nową książkę", new_book_path, class: "btn btn-success"
        / Page Content Holder
        #content
          %nav.navbar.navbar-default
            .container-fluid
              .navbar-header
                %button#sidebarCollapse.btn.btn-info.navbar-btn{type: "button", onclick: "collapseSidebar()"}
                  %i.glyphicon.glyphicon-align-left
                  %span Toggle Sidebar
              #bs-example-navbar-collapse-1.collapse.navbar-collapse
                %ul.nav.navbar-nav.navbar-right
                  %li
                    =link_to 'Home', root_path
                  %li
                    =link_to 'Książki', books_path
            .container
              =yield