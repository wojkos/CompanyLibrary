<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class= "table">
  <thead>
    <tr>
      <th>Tittle</th>
      <th>Author</th>
      <th>Category</th>
      <th>Image url</th>
      <th>Is borrowed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.tittle %></td>
        <td><%= book.author %></td>
        <td><%= book.category %></td>
        <td><%= book.image_url %></td>
        <td><%= book.is_borrowed %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
